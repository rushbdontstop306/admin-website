<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{>nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->
            <div class="modal-body">
                <div class="row content">
                    <div class="col-sm-12">
                        <form method="POST" action="" class="form-horizontal">
                            <div class="panel-heading" style="font-size: 25px;font-weight: bold; background-color: rgb(28, 188, 156);color: white">Thông tin cá nhân</div>
                            <div class="panel panel-success">
                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        <label>Họ tên</label>
                                        <input name="name" class="form-control" type="text" value="{{admin.info.name}}" readonly="true">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label>Email</label>
                                        <input name="email" class="form-control" type="email" value="{{admin.email}}" readonly="true">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label>Địa chỉ</label>
                                        <input id="address" name="address" class="form-control" type="text" value="{{admin.info.address}}" readonly="true">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label>Số điện thoại</label>
                                        <input id="phone" name="phone" class="form-control" type="number" value="{{admin.info.sdt}}" readonly="true">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="position">Chức vụ</label>
                                        <select class="form-control" id="position" name="position" readonly="true">
                                            <option value="Quản lý">{{admin.info.position}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
            <!-- Editable table -->


            <!-- Editable table -->
            <!-- /.container-fluid -->

            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2019</span>
                    </div>
                </div>
            </footer>

    </div>
        <!-- /.content-wrapper -->

</div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

