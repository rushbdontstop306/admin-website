<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{>nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->

            <!-- Editable table -->
                <div class="card-body">
                    <div class="row">
                        <a href="users/add"><button type="button" class="btn btn-success">Thêm mới</button></a>
                    </div>
                    </br>
                    <!-- End mainmenu area -->

                    <div class="row content">
                        <div class="panel-body">
                                    <table class="table table-striped table-bordered table-list" id="ta1">
                                        <thead>
                                        <tr>
                                            <th>Tên người dùng</th>
                                            <th>Username</th>
                                            <th>Email</th>
                                            <th>Địa chỉ</th>
                                            <th>Số điện thoại</th>
                                            <th>Chức năng</th>
                                        </tr>
                                        </thead>
                                    <tbody id="body-customer">
                                        {{#each customerList}}
                                            <tr>
                                                <td>{{this.info.name}}</td>
                                                <td>{{this.username}}</td>
                                                <td>{{this.email}}</td>
                                                <td>{{this.info.address}}</td>
                                                <td>{{this.info.sdt}}</td>
                                                <td>
                                                    <a href="users/update/{{this._id}}"> <i class="fa fa-pen fa-lg" aria-hidden="=true"></i> </a>
                                                    <a href="users/delete/{{this._id}}" onclick="return confirm ('Bạn có chắc chắn muốn xóa ?');" > <i class="fa fa-trash fa-lg" aria-hidden="=true"></i></a>
                                                    {{#if this.isBlocked}}
                                                        <a id="block{{@index}}" href="javascript:void(0)" onclick="changeBlockUser({{@index}}, '/users/list/block/{{this._id}}')"> <i class="fas fa-lock" aria-hidden="true"></i> </a>
                                                    {{else}}
                                                        <a id="block{{@index}}" href="javascript:void(0)" onclick="changeBlockUser({{@index}}, '/users/list/block/{{this._id}}')"> <i class="fas fa-lock-open" aria-hidden="true"></i> </a>
                                                    {{/if}}
                                                </td>
                                            </tr>
                                        {{/each}}
                                    </tbody>
                                    </table>
                                    {{>pagination}}
                                </div>
                            </div>
                        </div>

            <!-- Editable table -->
            <!-- /.container-fluid -->

            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2019</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
{{>logout}}

{{> js}}
    <script src="js/ajax-modal.js"></script>