<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{>nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->

            <!-- Editable table -->
                <div class="card-body">
                    <div class="row">
                        <a href="items/add"><button type="button" class="btn btn-success">Thêm mới</button></a>
                    </div>
                    </br>

                    <div class="row content">
                        <div class="panel-body">
                                    <table class="table table-striped table-bordered table-list" id="ta1">
                                        <thead>
                                        <tr>
                                            <th>Tên sản phẩm</th>
                                            <th>Loại sản phẩm</th>
                                            <th>Nhà sản xuất</th>
                                            <th>Đơn giá</th>
                                            <th>Lượt view</th>
                                            <th>Số lượng bán</th>
                                            <th>Chức năng</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {{#each productList}}
                                            <tr>
                                                <td>{{this.name}}</td>
                                                <td>{{this.category.name}}</td>
                                                <td>{{this.manufacturer.name}}</td>
                                                <td>{{formatCurrency this.price}}</td>
                                                <td>{{this.viewed}}</td>
                                                <td>{{this.sale}}</td>
                                                <td>
                                                    <a href="items/update/{{this._id}}"> <i class="fa fa-pen fa-lg" aria-hidden="=true"></i> </a>
                                                    <a href="items/delete/{{this._id}}" onclick="return confirm ('Bạn có chắc chắn muốn xóa ?');" > <i class="fa fa-trash fa-lg" aria-hidden="=true"></i></a>
                                                    {{#if this.status}}
                                                        <a id="block{{@index}}" href="javascript:void(0)" onclick="changeStatusProduct({{@index}}, '/items/list/block/{{this._id}}')"> <i class="fas fa-lock-open" aria-hidden="true"></i> </a>
                                                    {{else}}
                                                        <a id="block{{@index}}" href="javascript:void(0)" onclick="changeStatusProduct({{@index}}, '/items/list/block/{{this._id}}')"> <i class="fas fa-lock" aria-hidden="true"></i> </a>
                                                    {{/if}}
                                                </td>
                                            </tr>
                                        {{/each}}
                                        </tbody>
                                    </table>
                                    {{>pagination}}
                        </div>
                </div>
            </div>
            <!-- Editable table -->
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Your Website 2019</span>
                </div>
            </div>
        </footer>

    </div>
    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{{>logout}}

{{> js}}

<script src="js/ajax-modal.js"></script>