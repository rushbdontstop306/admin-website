<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{>nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->

            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-chart-area"></i>
                    Thống kê doanh thu theo từng tháng trong năm 2019</div>
                <div class="card-body">
                     <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Tháng</th>
                               
                                <th>Tổng doanh thu</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each orderByMonth}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{formatCurrency this.sumTotalPrice}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                         </div>
            </div>
 

            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Top 10 sản phẩm bán chạy</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Loại sản phẩm</th>
                                <th>Nhà sản xuất</th>
                                <th>Số lượng bán được</th>
                                <th>Tổng doanh thu</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each productList}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.category.name}}</td>
                                    <td>{{this.manufacturer.name}}</td>
                                    <td>{{this.sale}}</td>
                                    <td>{{formatCurrency this.price}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer small text-muted">{{datetime}}</div>
            </div>

        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Your Website 2019</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{{>logout}}

